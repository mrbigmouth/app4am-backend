body {
  margin: 0;
  background: #383B35;
  color: white;
  
  a {
    color: #F2A500;
  }
  a:hover {
    font-weight: bold;
    color: #FEC956;
  }
}

header {
  background: #901c0a;
  margin: 0 0 10px 0;
  padding: 0 0 0 10px;
  text-align: left;
  position: relative;
  height: 64px;
  
  h1 {
    padding-top: 8px;
    margin: 0;
  }
  
  a.login {
    position: absolute;
    right: 10px;
    top: 18px;
  }
}

div.wrapper {
  margin: 10px auto 10px auto;
  min-width: 1024px;
  width: 95%;
  height: 90vh;
  font-size: 14px;

  hr {
    clear: both;
  }

  h1 {
    text-align: left;
    font-size: 20px;
  }

  div.left, div.right {
    width:  48%;
    height: 90%;
    margin: 0;
    padding: 0;
    overflow: auto;
  }
  div.left {
    position: relative;
    float: left;

    img.loading {
      position: absolute;
      top: 47%;
      left: 47%;
      z-index: 10;
    }
  }
  div.right {
    position: relative;
    float: right;

    img.loading {
      position: absolute;
      top: 47%;
      left: 47%;
      z-index: 10;
    }
  }

  form.buttons {
    text-align: right;
    margin-bottom: 10px;
  }

  div.unAssignNewsList {
    div.filterDate.on{
      span {
        display: inline;
      }
      a.turn.on {
        display: none;
      }
      a.turn.off {
        display: inline;
      }
    }
    div.filterDate.off {
      span {
        display: none;
      }
      a.turn.on {
        display: inline;
      }
      a.turn.off {
        display: none;
      }
    }

    div.eachNews {
      background: #434740;
      padding: 6px;
      cursor: pointer;
      border: 1px dashed #DDDDDD;
      margin-top: 4px;
      border-radius: 5px;

      div {
        margin-bottom: 5px;
      }

      div.title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow : ellipsis;
        font-weight: bold;
        font-size: 16px;
      }

      div.topic {
        white-space: nowrap;
        overflow: hidden;
        text-overflow : ellipsis;
        font-size: 12px;
      }
      div.data {
        display:none;

        span {
          display: inline-block;
          margin: 0 5px 0 0;
        }
      }
    }

    div.eachNews.selected {
      border: 2px solid #F2A500;

      div.data {
        display: block;
      }
    }

  }

  div.topicList {
    div.eachTopic {
      background: #434740;
      padding: 6px;
      cursor: pointer;
      border: 1px dashed #DDDDDD;
      margin-top: 4px;
      border-radius: 5px;

      div {
        margin-bottom: 5px;
      }

      div.name {
        white-space: nowrap;
        overflow: hidden;
        text-overflow : ellipsis;
        font-weight: bold;
        font-size: 16px;
      }

      div.tags {
        white-space: nowrap;
        overflow: hidden;
        text-overflow : ellipsis;
      }

      a {
        display: inline-block;
        margin: 0 0 0 5px;
        float: right;
      }

      span.time {
        font-size: 12px;
      }
      span.time {
        float: right;
      }

      form.editor {
        display: none;

        label {
          display: inline-block;
          width: 100%;
          span {
            display: inline-block;
            width: 15%;
            text-align: right;
          }
          .input {
            width: 70%;
          }
        }
      }
    }

    div.eachTopic.selected {
      border: 2px solid #F2A500;
    }

    div.eachTopic.editing {
      div.display {
        display: none;
      }
      form.editor {
        display: block;
      }
    }
  }


  div.analysis {
    div.eachNews {
      h3 {
        margin: 3px;

        a {
          font-size: 14px;
          font-weight: normal;
        }
      }
    }
  }

  .svg_wrapper {
    width: 50%;
    overflow: auto;
    float: left;
  }
}

#analysisLineChart {
  .axis {
    path, line {
      fill: none;
      stroke: #000;
      shape-rendering: crispEdges;
    }
  }

  .line {
    fill: none;
    stroke-width: 1.5px;
  }

  .line.total {
    stroke: #4682b4;
  }
  .text.total, .point.total {
    fill: #4682b4;
  }

  .line.Apple {
    stroke: #FF0000;
  }
  .text.Apple, .point.Apple {
    fill: #FF0000;
  }

  .line.LTN {
    stroke: #00FF00;
  }
  .text.LTN, .point.LTN {
    fill: #00FF00;
  }

  .line.ChinaTime {
    stroke: #0000FF;
  }
  .text.ChinaTime, .point.ChinaTime {
    fill: #0000FF;
  }

  .line.UDN {
    stroke: #00FFFF;
  }
  .text.UDN, .point.UDN {
    fill: #00FFFF;
  }

  .point {
    cursor: pointer;
  }

  .tips {
    rect {
      border: 1px solid black;
    }
    text {
      stroke: #000000;
    }
  }

  .arc path {
    stroke: #FFFFFF;
  }
}
